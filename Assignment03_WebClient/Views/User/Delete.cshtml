@model Assignment03_BussinessObject.Entities.AspNetUser
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860

@{
    ViewData["Title"] = "Delete AspNetUser";
}

<h1>Delete AspNetUser</h1>

@if (ViewBag.ErrMsg != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrMsg
    </div>
}

<div>
    <h4>AspNetUser Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Id:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Id)</dd>

        

        <dt class="col-sm-2">UserName:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.UserName)</dd>

        <dt class="col-sm-2">NormalizedUserName:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.NormalizedUserName)</dd>

        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-2">NormalizedEmail:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.NormalizedEmail)</dd>

        <dt class="col-sm-2">EmailConfirmed:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.EmailConfirmed)</dd>

        <dt class="col-sm-2">PasswordHash:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.PasswordHash)</dd>

        <dt class="col-sm-2">SecurityStamp:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.SecurityStamp)</dd>

        <dt class="col-sm-2">ConcurrencyStamp:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ConcurrencyStamp)</dd>

        <dt class="col-sm-2">PhoneNumber:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.PhoneNumber)</dd>

        <dt class="col-sm-2">PhoneNumberConfirmed:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.PhoneNumberConfirmed)</dd>

        <dt class="col-sm-2">TwoFactorEnabled:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.TwoFactorEnabled)</dd>

        <dt class="col-sm-2">LockoutEnd:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.LockoutEnd)</dd>

        <dt class="col-sm-2">LockoutEnabled:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.LockoutEnabled)</dd>

        <dt class="col-sm-2">AccessFailedCount:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.AccessFailedCount)</dd>

        <dt class="col-sm-2">FirstName:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.FirstName)</dd>

        <dt class="col-sm-2">LastName:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.LastName)</dd>



    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="mt-3">
            <p class="text-danger">Are you sure you want to delete this User?</p>
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

