@model Assignment03_BussinessObject.Entities.Product
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860

@{
    ViewData["Title"] = "Delete Product";
}

<h1>Delete Product</h1>

@if (ViewBag.ErrMsg != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrMsg
    </div>
}

<div>
    <h4>Product Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ProductId:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ProductId)</dd>

        <dt class="col-sm-2">Category:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Category.CategoryName)</dd>

        <dt class="col-sm-2">ProductName:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ProductName)</dd>

        <dt class="col-sm-2">Weight:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Weight)</dd>

        <dt class="col-sm-2">UnitPrice:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.UnitPrice)</dd>

        <dt class="col-sm-2">UnitsInStock:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.UnitsInStock)</dd>

        
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductId" />
        <div class="mt-3">
            <p class="text-danger">Are you sure you want to delete this book?</p>
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

